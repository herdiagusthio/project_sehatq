<div class="container">
	<h3 class="text-center">List Dokter</h3>
	<% @doctors.each do |doctor| %>
	    <div class="card" style="width: 18rem; float: left; margin: 40px;">
		    <a href="<%= doctors_path %>/<%= doctor.slug %>">
		    	<img src="<%= doctor.image %>" class="card-img-top" alt="">
		    </a>
		    <a href="<%= doctors_path %>/<%= doctor.slug %>">		    	
			    <div class="card-body">
			        <h5 class="card-title"><%= doctor.name %></h5>
			        <p class="card-text"><%= doctor.hospital.name %></p>
			        <p class="card-text"><%= doctor.hospital.location %></p>		        
			    </div>
		    </a>
		</div>
	<% end %>
	<div class="row justify-content-center position-static">
		<nav aria-label="Page navigation example">		
	  		<%= paginate @doctors %>
		</nav>
	</div>
</div>