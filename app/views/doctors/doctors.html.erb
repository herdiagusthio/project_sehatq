<h3>List Dokter</h3>

<div class="container">
	<% @doctors.each do |doctor| %>
  		<div class="col-md-4 img">
  			<a href="<%= doctors_path %>/<%= doctor.slug %>"> 
				<img src="<%= doctor.image %>"  alt="" class="img-thumbnail">
			</a>
      		<blockquote>
      			<a href="<%= doctors_path %>/<%= doctor.slug %>">
	        		<h5><%= doctor.name %></h5>
        		</a>
	        	<small><cite title="Source Title"><%= doctor.hospital.name %>  <i class="icon-map-marker"></i></cite></small>
	        	<br>
	        	<%= doctor.hospital.location %>
	      	</blockquote>
	    </div>		  	
	<% end %>
	<div class="row">
		<div class="col-md-2 col-md-offset-5"></div>		
  		<%= paginate @doctors %>
	</div>
</div>