<div class="container">
    <div class="row text-center">
        <div class="col-md-6 img">
            <div class="profile-img">
                <img src="<%= @data.image %>" alt="" class="img-thumbnail"/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-left">
                <h5><%= @data.name %></h5>
                <h6><%= @data.role %></h6>
            </div>
            <br>
            <h5 class="text-left">Profile</h5>
            <div class="text-justify">
                <p><%= @data.profile.tr('[]{}"', '') %></p> 
            </div> 
        </div>
    </div>
    <hr>
    <div class="row text-center">
        <div class="col-md-6 img">
            <h5><%= @data.hospital.name %></h5>
            <h6><%= @data.hospital.location %></h6>
            <div class="profile-img">
                <img src="<%= @data.hospital.image %>" alt="" class="img-thumbnail"/>
            </div>
        </div>
        <div class="row col-md-6 col-md-offset-2 custyle">
            <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Hari</th>
                    <th>Jam Praktik</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
                <% if @work_detail.any? %>
                    <% @work_detail.each_with_index do |schedule, i| %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= schedule.day %></td>
                            <td><%= schedule.start_work_time.strftime("%I:%M") %> - <%= schedule.end_work_time.strftime("%I:%M") %></td>
                            <td class="text-center"><a class='btn btn-info btn-xs' href="/booking?wdi=<%= schedule.id %>"><span class="glyphicon glyphicon-edit"></span> Booking Dokter</a> </td>
                        </tr>
                    <% end %>
                <% end %>
            </table>
        </div>
        
    </div>           
</div>