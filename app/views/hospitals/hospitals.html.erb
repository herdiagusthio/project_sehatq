<h1>List Rumah Sakit</h1>

<div class="container">
	<% @hospitals.each do |hospital| %>
	  	<div class="row row-10">
	  		<div class="col-md-6">
	  			<div class="col-md-4 img">
		  			<a href="<%= hospitals_path %>/<%= hospital.slug %>"> 
						<img src="<%= hospital.image %>"  alt="" class="img-thumbnail">
					</a>
				</div>
				<div class="col-md-4 details">
					<a href="<%= hospitals_path %>/<%= hospital.slug %>">
		        		<h5><%= hospital.name %></h5>
	        		</a>
		        	<small><cite title="Source Title"><%= hospital.name %>  <i class="icon-map-marker"></i></cite></small>
		        	<br>
		        	<%= hospital.location %>
		       	</div>
		    </div>		  	
	  	</div>
	  	<hr>
	<% end %>
	<div class="row">
		<div class="col-md-2 col-md-offset-5"></div>		
  		<%= paginate @hospitals %>
	</div>
</div>