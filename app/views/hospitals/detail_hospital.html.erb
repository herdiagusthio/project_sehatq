<div class="container">
    <div class="row text-center">
        <div class="col-md-6 img">
            <div class="profile-img">
                <img src="<%= @data.image %>" alt="" class="img-thumbnail"/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-left">
                <h5><%= @data.name %></h5>
                <h6><%= @data.location %></h6>
                <h6><%= @data.operational_time %></h6>
                <%unless @data.note.blank? %><h6><%= @data.note %></h6> <% end %>
            </div>
            <br>
            <h5 class="text-left">Profile</h5>
            <div class="text-justify">
                <p><%= @data.profile.tr('[]{}"', '') %></p> 
            </div> 
        </div>
    </div>           
</div>