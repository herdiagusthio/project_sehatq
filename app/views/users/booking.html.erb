<%= simple_form_for(@booking_data, url:{action: "create_booking"}, class: 'form') do |f| %>
  <%= f.error_notification %>
  <div id="sign_up">
    <h3 class="text-center text-white pt-5">Booking Dokter</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Booking Dokter</h3>
                        <input type="hidden" name="work_detail_id" value="<%= params[:wdi] %>">
                        <div class="form-group">
                            <label for="patient_name" class="text-info">Nama Pasien:</label><br>
                            <input class="form-control string required" autofocus="autofocus" required="required" aria-required="true" type="text" name="patient_name" id="patient_name"> 
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-info">Email:</label><br>
                            <input class="form-control string email required" value="<%= current_user.email %>" readonly="readonly" required="required" aria-required="true" type="email" name="email" id="email">
                        </div>
                        <div class="form-group">
                            <label for="phone_number" class="text-info">Nomor Handphone:</label><br>
                            <input class="form-control string tel required" autofocus="autofocus" required="required" aria-required="true" type="tel" name="phone_number" id="phone_number">
                        </div>
                        <div class="form-group">
                            <label for="birthdate" class="text-info">Tanggal Lahir:</label><br>

                            <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                              <input type="text" class="form-control datetimepicker-input" name="birthdate" data-target="#datetimepicker1" required/>
                              <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                              </div>
                            </div>
                        </div>
                        <div class="form-group">
                          <label for="booking_date" class="text-info">Tanggal Booking:</label><br>
                          <div class="input-group date" id="datetimepicker12" data-target-input="nearest">
                            <input type="text" class="form-control datetimepicker-input" name="booking_date" data-target="#datetimepicker12" required/>
                            <div class="input-group-append" data-target="#datetimepicker12" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                            <%= f.submit 'Booking Sekarang', class: 'btn btn-primary' %>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </div>
<% end %>


<script type="text/javascript">
  $(function () {
    $.fn.jquery;
    $('#datetimepicker12').datetimepicker({
      daysOfWeekDisabled: <%= @disabled_day %>,
      format: 'L',
      format: 'DD-MM-YYYY'
    });
  });

  $(function () {
    $.fn.jquery;
    $('#datetimepicker1').datetimepicker({
      format: 'L',
      format: 'DD-MM-YYYY'
    });
  });
</script>